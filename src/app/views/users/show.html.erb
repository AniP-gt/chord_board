<div class="show-wrap">

  <div class="show-wrap-header">
    <% if @user.id == current_user.id %>
      <div class="show-h1">
        <h1>マイページ</h1>
      </div>
    <%else%>
      <div class="show-h1">
        <h1>作曲者ページ</h1>
      </div>
    <%end%>
  </div>

  <div class="show-container">
    <div class="no-image">
      <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
    </div>

    <div class="show-wrapper">
      <% if @user.id == current_user.id %>
        <div class="edit">
          <%=link_to"編集", edit_user_path(@user), class:"edit-btn" %>
        </div>
      <%end%>
      <div class="show-edit">
        ユーザー名：<%= @user.username%>
      </div>

      <% if @user.id == current_user.id %>
        <div class="show-edit">
          メールアドレス：<%= @user.email%>
        </div>
      <%end%>

      <div class="show-profile">
        <span class="box-title">プロフィール</span>
        <%= @user.profile%>
      </div>
    </div>
  </div>

</div>