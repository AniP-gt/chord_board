<div class="wrap">
  <div class="users-wrapper">
    <% @users.each do |user|%>
      <div class="users-container">
            <div class="no-image">
              <%=link_to user_path(user) do%>
                <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
              <%end%>
            </div>
            <div class="users-name">
              <%= link_to user.username, user_path(user) %>
            </div>
            <div class="count">
              投稿数 :
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>